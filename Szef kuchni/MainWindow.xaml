<Window x:Class="Szef_kuchni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szef_kuchni"
        xmlns:viewModel="clr-namespace:Szef_kuchni.MVVM.ViewModel"
        xmlns:view="clr-namespace:Szef_kuchni.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="1280"
        Height="720"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F1E3C6" Offset="0.0" />
                <GradientStop Color="#EDE7D0" Offset="0.5" />
                <GradientStop Color="#D9CEB2" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <!-- Układ wierszy i kolumn -->
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <!-- Pierwszy rząd -->
                <RowDefinition Height="*" />
                <!-- Drugi rząd -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <!-- Kolumna 1 -->
                <ColumnDefinition Width="0.6*" />
                <!-- Kolumna 2 -->
                <ColumnDefinition Width="2*" />
                <!-- Kolumna 3 -->
            </Grid.ColumnDefinitions>

            <!-- Szef kuchni - 1 rząd, 1 kolumna -->
            <TextBlock Text="Szef kuchni" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Black"
                       FontSize="40"
                       Grid.Row="0"
                       Grid.Column="0"
                       FontFamily="/Fonts/#Cinzel" 
                       Margin="0, 30, 0, 0"
                       />

            <!-- Wyszukaj - 1 rząd, 2 kolumna -->
            <TextBox Width="200"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Grid.Row="0"
                     Grid.Column="1"
                     Margin="10,45,0,15"
                     Style="{StaticResource TextBoxStyle}"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsTextBoxEnabled}" />

            <!-- Menu - 1 rząd, 3 kolumna -->
            <StackPanel Grid.Row="0" Grid.Column="2" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Orientation="Horizontal" 
                        Margin="10,30,0,0">
                <RadioButton Content="Popularne"
                             Width="150"
                             Height="40"
                             Foreground="Black"
                             FontSize="30"
                             Style="{StaticResource MenuButtonStyle}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}" />
                <RadioButton Content="Ulubione"
                             Width="160"
                             Height="40"
                             Foreground="Black"
                             FontSize="30"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding FavouriteViewCommand}" />
                <RadioButton Content="Wszystkie"
                             Width="150"
                             Height="40"
                             Foreground="Black"
                             FontSize="30"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding SearchViewCommand}" />
                <RadioButton Content="Historia"
                             Width="130"
                             Height="40"
                             Foreground="Black"
                             FontSize="30"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding HistoryViewCommand}" />
                <RadioButton Content="Szukaj"
                             Width="105"
                             Height="40"
                             Foreground="Black"
                             FontSize="30"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding FilterViewCommand}" />
            </StackPanel>

            <!-- Przycisk zamykania aplikacji -->
            <StackPanel Grid.Row="0" Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Margin="0,10,10,0">

                <Button Content="━"
                        Width="30"
                        Height="30"
                        Background="#93E1D8"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Command="{Binding MinimizeAppCommand}" />
                <Button Content="[ ]"
                        Width="30"
                        Height="30"
                        Background="#FFD54F"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Command="{Binding MaximizeAppCommand}" />
                <Button Content="X"
                        Width="30"
                        Height="30"
                        Background="#E57373"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Command="{Binding CloseAppCommand}" />
            </StackPanel>

            <!-- Zawartość widoku - 2 rząd -->
            <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,0" Content="{Binding CurrentView}" />
        </Grid>
    </Border>
</Window>
