<Window x:Class="Szef_kuchni.MVVM.View.IngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Składniki"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        SizeToContent="WidthAndHeight">

    <Border CornerRadius="30" Padding="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F1E3C6" Offset="0.0" />
                <GradientStop Color="#EDE7D0" Offset="0.5" />
                <GradientStop Color="#D9CEB2" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" VerticalAlignment="Center">
                <Button Content="X"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        DockPanel.Dock="Right"
                        Background="#E57373"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Click="CloseApp_Click" />
                <Button Content="━"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        DockPanel.Dock="Right"
                        Background="#93E1D8"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="MinimizeApp_Click" />

                <TextBlock Text="{Binding Title}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#5C4033"
                    Margin="10,0,10,0" DockPanel.Dock="Left"/>
            </DockPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="600">
                <StackPanel>
                    <TextBlock Text="Składniki:" FontSize="18" FontWeight="Bold" Margin="10" />
                    <ItemsControl ItemsSource="{Binding Ingredients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                                    <TextBlock Text=" - " FontSize="16" Foreground="#5C4033" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Ingredients}" 
                                               FontSize="16" 
                                               Foreground="#5C4033"  
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Left"
                                               TextWrapping="NoWrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
