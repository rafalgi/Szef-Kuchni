<Window x:<Window x:Class="ChefApp.RecipeDetail"
        Title="Szczegóły przepisu" Height="500" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="RecipeTitle" FontSize="24" FontWeight="Bold" />
            <TextBlock x:Name="RecipeDescription" TextWrapping="Wrap" Margin="10" />
            <Button Content="Eksport do PDF" Click="ExportToPDF_Click" />
            <Button Content="Rozpocznij tryb głosowy" Click="StartVoiceMode_Click" />
        </StackPanel>
    </Grid>